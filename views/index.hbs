<!DOCTYPE html>
<html>
  <head>
    <title>FiveM Status Page</title>
    <link href="https://fonts.googleapis.com/css?family=Roboto" rel="stylesheet">
    <script src="jquery-3.2.1.min.js"></script>
    <script type="text/javascript">
      setInterval(() => {
        $.get("/json", (data) => {
          var html = "";
          for (var i = data.length - 1; i >= 0; i--) {
          	if (data[i].status == "Online") {
          	html= html + "<p>" + data[i].name + ": <span style = 'color:green'>" + data[i].status + "</span>, Response Time: " + data[i].time + "<br>"
          } else {
          	html= html + "<p>" + data[i].name + ": <span style = 'color:red'>" + data[i].status + "</span>, Response Time: " + data[i].time + "<br>"
          }
          }
          $(".statuses").html(html);
        })
      }, 30000)
    </script>
  </head>
  <body>
    <div class="wrapper">
      <div class="app">
        <h1 class="header">FiveM Status Page</h1>
        <div class="statuses">
          
        </div>
        <p class="footer">This website is not related to the FiveM team.</p>
        <p class="footer">Backend by IceHax and Frontend by Amorris and IceHax</p>
        <a class="footer" style="text-decoration: underline" href="https://github.com/BeeCodingOfc/fivemstatus">Source Code</a>
      </div>
    </div>

    <!-- This should probably be in a separate file, but meh. -->
    <style>
      body {
        height: 100vh;
        margin: 0;
        font-family: 'Roboto', sans-serif;
        background-color: #333;
        color: #bbb;
      }

      .statuses {
        padding-bottom: 0.5em;
      }

      .wrapper {
        width: 100%;
        height: 100%;
        display: flex;
        align-items: center;
        justify-content: center;
      }

      .app {
        text-align: center;
      }

      .header {
        color: #ddd;
        font-weight: bold;
      }

      .footer {
        color: #666;
      }

    </style>
  </body>
</html>
